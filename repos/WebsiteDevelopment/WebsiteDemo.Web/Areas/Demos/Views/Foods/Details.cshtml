@* @model WebsiteDemo.Web.Models.Food*@
@model WebsiteDemo.Web.Areas.Demos.ViewModels.FoodViewModel


@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Food</h4>
    <hr />

      <div class="card" style="width:70%">
        <div class="card-title text-center">
            <h2>@Html.DisplayFor(model => model.Category.CategoryName)</h2>
        </div>
        <img class="card-img-top" src="@Model.ImageUrl" alt="@Model.FoodName" 
             style="max-height: 300px;">
        <div class="card-body">
            <h4 class="card-title">@Model.FoodName</h4>
            <div class="row">
                <div class="col card-text">
                    @Html.DisplayNameFor(model => model.FoodPrice)
                </div>
                <div class="col card-text">
                    @Html.DisplayFor(model => model.FoodPrice)
                </div>
            </div>
             <div class="row">
                <div class="col card-text">
                    @Html.DisplayNameFor(model => model.IsAvailable)
                </div>
                <div class="col card-text">
                    @Html.DisplayFor(model => model.IsAvailable)
                </div>
            </div>

            <div class="="row>
                @if(Model.Orders != null && Model.Orders.Count > 0)
                {
                    <div class="col-4 card-text">
                        Orders:
                    </div>

                    <div class="col-6 card-text">
                        <ul>
                            @{
                                foreach(var order in Model.Orders)
                                {
                                    <li>@order.OrderName</li>
                                }
                            }
                        </ul>
                    </div>
                }
            </div>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Edit" asp-route-id="@Model.FoodId" class="btn btn-primary">Edit</a>
            &nbsp;|&nbsp;
            <a asp-action="Index">Back to List</a>
        </div>
    </div>

</div>
   
