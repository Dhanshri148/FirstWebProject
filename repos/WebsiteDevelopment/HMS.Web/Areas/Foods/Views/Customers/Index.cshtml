@model IEnumerable<HMS.Web.Models.Customer>

@{
    ViewData["Title"] = "Customer";
}

<body style="background-color:linen">
<h1 style="font-family:'Curlz MT';color:fuchsia">@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New Customer</a>
</p>
<table class="table" style="background-color:coral">
    <thead style="background-color:lightpink">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Food)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Food)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Food.FoodName)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Food.FoodPrice)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.CustomerId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CustomerId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CustomerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>