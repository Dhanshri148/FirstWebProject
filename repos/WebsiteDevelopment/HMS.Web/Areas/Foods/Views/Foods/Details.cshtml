@* @model HMS.Web.Models.Food *@
@model HMS.Web.Areas.Foods.ViewModels.FoodViewModel

@{
    ViewData["Title"] = "Details";
}

<body style="background-color:silver">
<h1>Details</h1>

<div class="card" style="width:50%">
        <div class="card-title text-center" style="background-color:bisque">
            <h2>@Html.DisplayFor(model => model.Category.CategoryName)</h2>
        </div>
        <img class="card-img-top" src="@Model.ImageUrl" alt="@Model.FoodName" 
             style="max-height: 300px;"/>
        <div class="card-body" style="background-color:lavenderblush">
            <h4 class="card-title">@Model.FoodName</h4>
            <div class="row">
                <div class="col card-text">
                    @Html.DisplayNameFor(model => model.FoodPrice)
                </div>
                <div class="col card-text">
                    @Html.DisplayFor(model => model.FoodPrice)
                </div>
            </div>
             <div class="row">
                <div class="col card-text">
                    @Html.DisplayNameFor(model => model.IsAvailable)
                </div>
                <div class="col card-text">
                    @Html.DisplayFor(model => model.IsAvailable)
                </div>
            </div>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Edit" asp-route-id="@Model.FoodId" class="btn btn-primary">Edit</a>
            &nbsp;|&nbsp;
            <a asp-action="Index">Back to List</a>
        </div>
    </div>

</body>