@using Healthifyme.Web.Areas.DietitionDetails.ViewModels
@model ShowExerciseViewModel

@{
}

<h1>The Exercise</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ExerciseCategoryId" class="control-label"></label>
                <select asp-for="ExerciseCategoryId" class="form-control" asp-items="ViewBag.ExerciseCategoryId"></select>
            </div>

            <button type="submit" class="btn btn-primary">Get exercises</button>
        </form>
    </div>
</div>


@if (Model != null && Model.Exercises != null)
{
    <form method="post">
        <input type="hidden" asp-for="ExerciseCategoryId" />

        <div class="card-columns mt-3">
            @foreach (var item in Model.Exercises)
            {
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title"> @item.ExerciseName </h4>
                        
                    </div>
                    <div class="card-footer">
                  
                        <button class="btn btn-sm btn-primary" type="submit"
                        asp-area="Dietitions" asp-controller="DietCharts"
                        asp-action="Details" asp-route-id="@item.ExerciseCategoryId">
                            View Diet
                        </button>

                        <button class="btn btn-sm btn-primary" type="submit"
                        asp-area="Dietitions" asp-controller="Exercises"
                        asp-action="Details" asp-route-id="@item.ExerciseCategoryId">
                            View Exercise
                        </button>

                    </div>
                </div>
            }
        </div>
    </form>
}



@section HeadScripts {
    <style>
        h1 {
            color: darkgreen;
            text-align: center;
            font-family: 'Brush Script MT', Arial;
            font-size: 3rem;
            font-weight: bold;
        }
    </style>
}