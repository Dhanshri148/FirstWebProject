@model IEnumerable<Healthifyme.Web.Models.Exercise>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ExerciseId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExerciseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExerciseCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExerciseDescription)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ExerciseId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExerciseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExerciseCategory.ExerciseCategoryId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExerciseDescription)
                </td>

                <td>
                 
                    <a asp-action="Details" asp-route-id="@item.ExerciseId">Details</a> |
                    
                </td>
            </tr>
        }
    </tbody>
</table>
